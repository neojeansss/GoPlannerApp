<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFFC"
    tools:context=".Task_Detail">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/detailTitleET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="92dp"
            android:ems="10"
            android:inputType="text"
            android:text="Title"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/baseline_access_time_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <EditText
            android:id="@+id/detailTimeStartET"
            android:layout_width="102dp"
            android:layout_height="45dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:text="Time Start"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/detailDateTV" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="76dp"
            android:text="-"
            app:layout_constraintStart_toEndOf="@+id/detailTimeStartET"
            app:layout_constraintTop_toBottomOf="@+id/detailTitleET" />

        <EditText
            android:id="@+id/detailTimeEndET"
            android:layout_width="92dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="68dp"
            android:text="Time End"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/detailTitleET" />

        <Button
            android:id="@+id/detailEventBtn"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="280dp"
            android:backgroundTint="#ffffff"
            android:text="Event"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailTimeStartET" />

        <TextView
            android:id="@+id/detailDateTV"
            android:layout_width="106dp"
            android:layout_height="33dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="236dp"
            android:text="Date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/detailTitleET" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="263dp"
            android:text="Activity Description"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailEventBtn" />

        <EditText
            android:id="@+id/detailDescET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="11dp"
            android:ems="10"
            android:inputType="text"
            android:text="description"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <Button
            android:id="@+id/detailSaveBtn"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="396dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="17dp"
            android:backgroundTint="#27FF00"
            android:text="Save Edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/detailDeleteBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailDescET" />

        <Button
            android:id="@+id/detailDeleteBtn"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="396dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="17dp"
            android:backgroundTint="#FB0000"
            android:text="Delete Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detailSaveBtn"
            app:layout_constraintTop_toBottomOf="@+id/detailDescET" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="42dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="91dp"
            android:src="@drawable/_652191"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>