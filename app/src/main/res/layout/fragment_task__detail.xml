<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFFC"
    tools:context=".Task_Detail">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/square"
            app:layout_constraintEnd_toStartOf="@+id/detailDateTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/detailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="92dp"
            android:ems="10"
            android:inputType="text"
            android:text="Title"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/baseline_access_time_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailTitle" />

        <EditText
            android:id="@+id/detailTimeStartET"
            android:layout_width="76dp"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="8dp"
            android:text="Time Start"
            android:textSize="10dp"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="56dp"
            android:text="-"
            app:layout_constraintStart_toEndOf="@+id/detailTimeStartET"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle" />

        <EditText
            android:id="@+id/detailTimeEndET"
            android:layout_width="76dp"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:text="Time Start"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle" />

        <Button
            android:id="@+id/detailEventBtn"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="310dp"
            android:backgroundTint="#ffffff"
            android:text="Event"
            android:textColor="#757575"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailTimeStartET" />

        <TextView
            android:id="@+id/detailDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Date"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Activity Description"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/detailEventBtn" />

        <EditText
            android:id="@+id/detailDescET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="13dp"
            android:ems="10"
            android:inputType="text"
            android:text="description"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <Button
            android:id="@+id/detailSaveBtn"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="396dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="17dp"
            android:backgroundTint="#27FF00"
            android:text="Save Edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/detailDeleteBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailDescET" />

        <Button
            android:id="@+id/detailDeleteBtn"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="396dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="17dp"
            android:backgroundTint="#FB0000"
            android:text="Delete Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detailSaveBtn"
            app:layout_constraintTop_toBottomOf="@+id/detailDescET" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>